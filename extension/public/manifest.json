{
  "name": "Cyber-Secure",
  "description": "An extension helps you secure from script attacks",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CyberSecure",
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "128": "logo192.png"
    }
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "notifications",
    "activeTab", "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/static/js/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "omnibox": {
    "keyword": "safecheck"
  }
}